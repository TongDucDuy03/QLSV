@*@model List<test3.Models.SinhVien>*@
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<test3.Models.Scholarship>
@{
    ViewBag.ac = 17;
}

<h2>Danh sách học bổng </h2>
<form action="/QLHB/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
            <select name="searchField" class="form-control" style="width: 30%;">
                <option value="ScholarshipID">MHB</option>
                
            </select>
            <input type="text" name="searchValue" class="form-control" placeholder="Nhập giá trị cần tìm kiếm" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @Html.ActionLink("Export", "ExportSinhVien", "Export", null, new { @class = "btn btn-primary", @style = "margin-left: 600px;" })
        </div>
    </div>
</form>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Mã học bổng</th>
                        <th>Tên học bổng</th>
                        <th>Mô tả</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Điều kiện</th>
                        
                        <th> </th>

                    </tr>
                </thead>
                @if (Model != null && Model.Any())
                {
                    <tbody>
                        @foreach (var hocBong in Model)
                        {
                            <tr>
                                <td>@hocBong.ScholarshipID</td>
                                <td>@hocBong.ScholarshipName</td>
                                <td>@hocBong.Description</td>
                                <td>@hocBong.StartDate</td>
                                <td>@hocBong.EndDate</td>
                                <td>@hocBong.Conditions</td>
                                
                                <td><a href="~/QLHB/Suathongtin?id=@hocBong.ScholarshipID">Sửa</a></td>
                            </tr>
                        }

                    </tbody>
                }

            </table>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("DanhSachHocBong", new { page, pageSize = ViewBag.PageSize }))
    </div>
</div>

