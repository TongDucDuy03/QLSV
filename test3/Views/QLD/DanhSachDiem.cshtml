@*@model List<test3.Models.SinhVien>*@
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<test3.Models.Grade>
@{
    ViewBag.ac = 13;
}

<h2>Danh sách điểm </h2>
<form action="/QLD/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
            <select name="searchField" class="form-control" style="width: 30%;">
                <option value="StudentID">MSSV</option>
                <option value="CourseID">Mã môn</option>
                <option value="ExamDate">Ngày thi</option>
                <option value="SemesterID">Kì</option>
            </select>
            <input type="text" name="searchValue" class="form-control" placeholder="Nhập giá trị cần tìm kiếm" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @Html.ActionLink("Export", "ExportSinhVien", "Export", null, new { @class = "btn btn-primary", @style = "margin-left: 600px;" })
            <div>
                <button id="edit-toggle-btn" class="btn btn-primary">Sửa</button>
            </div>

        </div>
    </div>
</form>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="data-table">
                <thead>
                    <tr>
                        <th>Mã sinh viên</th>
                        <th>Mã môn</th>
                        <th>Tên môn</th>
                        <th>Ngày thi</th>
                        <th>Kì</th>
                        <th>Điểm hệ 10</th>
                        <th>Điểm hệ 4</th>
                        <th>Điểm chữ</th>
                        <th> </th>

                    </tr>
                </thead>
                @if (Model != null && Model.Any())
                {
                    <tbody>
                        @foreach (var diem in Model)
                        {
                            <tr data-studentid="@diem.StudentID" data-courseid="@diem.CourseID" data-coursename="@diem.Cours.CourseName" data-examdate="@diem.ExamDate" data-semestername="@diem.Semester.SemesterName" data-scalescore10="@diem.ScoreScale10" data-scalescore4="@diem.ScoreScale4" data-lettergrade="@diem.LetterGrade">
                                <td>@diem.StudentID</td>
                                <td>@diem.CourseID</td>
                                <td>@diem.Cours.CourseName</td>
                                <td>@diem.ExamDate.ToString("dd-MM-yyyy")
                                <td>@diem.Semester.SemesterName</td>
                                <td class="editable">@diem.ScoreScale10</td>
                                <td>@diem.ScoreScale4</td>
                                <td>@diem.LetterGrade</td>
                            </tr>
                        }

                    </tbody>
                }

            </table>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("DanhSachDiem", new { page, pageSize = ViewBag.PageSize }))
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#edit-toggle-btn').on('click', function () {
            var buttonText = $(this).text();

            if (buttonText === 'Sửa') {
                $(this).text('Lưu');
                $('.editable').each(function () {
                    $(this).prop('contenteditable', true); // Cho phép chỉnh sửa trực tiếp trong cột ScoreScale10
                    $(this).addClass('edit-field');
                });
            } else {
                $(this).text('Sửa');
                var tableData = [];

                $('#data-table tbody tr').each(function () {
                    var rowData = {};

                    rowData.StudentID = $(this).data('studentid');
                    rowData.CourseID = $(this).data('courseid');
                    rowData.CourseName = $(this).data('coursename');
                    rowData.ExamDate = $(this).data('examdate');
                    rowData.SemesterName = $(this).data('semestername');
                    rowData.ScoreScale10 = $(this).find('.editable').text(); // Lấy dữ liệu từ cột ScoreScale10 sau khi chỉnh sửa
                    rowData.ScoreScale4 = $(this).data('scalescore4');
                    rowData.LetterGrade = $(this).data('lettergrade');

                    tableData.push(rowData);
                });

                $.ajax({
                    type: "POST",
                    url: window.location.origin + '/QLD/Suathongtin',
                    data: { updatedData: tableData },
                    success: function (response) {
                        window.location.href = window.location.origin + '/QLD/DanhSachDiem';
                    },
                    error: function (xhr, status, error) {
                        console.error("Lỗi khi cập nhật dữ liệu:", error);
                    }
                });

                $('.editable').each(function () {
                    $(this).prop('contenteditable', false);
                    $(this).removeClass('edit-field');
                });
            }
            return false;
        });
    });
</script>




