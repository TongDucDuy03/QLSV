

@*@model List<test3.Models.SinhVien>*@
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<test3.Models.Cours>
@{
    ViewBag.ac = 9;
}

<h2>Danh sách môn học </h2>
<!-- Advanced Tables -->
<form action="/QLMH/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
          <label for="TenMon" class="col-md-2 control-label" style="margin:7px">TênMôn:</label>
            <input type="text" name="searchValue" class="form-control" placeholder="Nhập giá trị cần tìm kiếm" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @Html.ActionLink("Export", "ExportMonHoc", "Export", null, new { @class = "btn btn-primary", @style = "margin-left: 600px;" })
        </div>
    </div>
</form>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Mã môn </th>
                        <th>Tên môn</th>
                        <th>Mô tả</th>
                        <th>Tín chỉ</th>
                        <th>Khoa</th>
                        <th>Học kì</th>
                        <th>Edit </th>
                        <th>Edit </th>




                    </tr>
                </thead>
                @if (Model != null && Model.Any())
                {
                    <tbody>
                        @foreach (var monHoc in Model)
                        {
                            <tr>
                                <td>@monHoc.CourseID</td>
                                <td>@monHoc.CourseName</td>

                                <td>@monHoc.Description</td>

                                <td>@monHoc.Credits</td>
                                <td>@monHoc.Department.DepartmentName</td>

                                <td>@monHoc.Semester.SemesterName</td>


                                <td>
                                    <form action="~/QLMH/Xoa" method="post">
                                        <input type="hidden" name="id" value="@monHoc.CourseID" />
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="~/QLMH/Suathongtin" method="get">
                                        <input type="hidden" name="id" value="@monHoc.CourseID" />
                                        <button type="submit" class="btn btn-primary">Sửa</button>
                                    </form>
                                </td>




                            </tr>
                        }

                    </tbody>
                }

            </table>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("DanhSachMonHoc", new { page, pageSize = ViewBag.PageSize }))
    </div>
</div>
